<h2>Sign in Connard</h2>

<div class="fancy_flash_messages">
	<%= render "layouts/flash_messages"%>
</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :remote => true, :validate => true) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, :validate => { :uniqueness => false, :presence => true } %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :validate => { :confirmation => false, :presence => true } %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <%= f.hidden_field :post_id, :value => @post_id %>
  <%= f.hidden_field :comment_id, :value => @comment_id %>


  <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>