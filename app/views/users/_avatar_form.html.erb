<%= simple_form_for(@avatar,:url => create_avatar_path, :html => { :multipart => true }, :remote => true) do |pic| %>
	<fieldset>
		<label>Image</label>

		
		<div id="avatar_preview" <%= "style=display:none" if @avatar.id.blank? %>>
			AperÃ§u de l'image
			</br>
			<%= @avatar.id.blank? ? "" : image_tag(@avatar.avatar.url(:thumb), :width => "60px") %>
		</div>

		<div id="delete_avatar_link" <%= "style=display:none" if @avatar.id.blank? %>>
			<%= link_to "Supprimer l'image", delete_avatar_path, :remote => true, :method => :delete, :confirm => 'Are you sure?' %>
		</div>
		
		<div class="inputs" id="avatar_input" <%= "style=display:none" if !@avatar.id.blank? %>>
			<%= pic.file_field :avatar %>
		</div>
	
		<div id="avatar_upload_status">
			<progress id="progressBar" value="0" max="100" style="display:none"></progress><span id="percent" style="display:none">0%</span>
			</br>
			<span id="status"></span>
		</div>
	</fieldset>
<% end %>