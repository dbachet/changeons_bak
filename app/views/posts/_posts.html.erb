<% @posts.each do |post| %>
<article id="post_<%= post.id %>">
	<div class="left">
		<div class="image"><%= image_tag post.picture.url(:thumb) if !post.presentation_picture.blank? %></div>
		<div class="date"><span class="day"><%= post.created_at.strftime("%d") %></span><span class="month"><%= getMonthFromNumber(post.created_at.strftime("%m")) %></span></br><span class="year"><%= post.created_at.strftime("%Y") %></span></div>
	</div>
	<div class="content">
		<header>
	    	<h1><%= post.title %></h1>
			<span>Ã©crit par</span> <%= post.user.email %>
		</header>
	    <div class="short_description"><%= raw(post.short_description) %></div>
	    <%= link_to 'Voir', post, :class => "link_to_entry" %>
	</div>
</article>
<div class="horizontal_rule"></div>
<% end %>
