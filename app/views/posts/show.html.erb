<div id="page_info" data-action="show_post"></div>
<section id="post">
	<div id="vote_down">
		<%= link_to(image_tag("thumbs_up.png", :width => "60px", :height => "60px"), vote_up_post_path(@post), :method => :post, :remote => true, :class => "vote_up") %>
	</div>

	<p id="votes_result">
		<%= render "posts/votes_result" %>
	</p>

	<div id="vote_down">
		<%= link_to(image_tag("thumbs_down.png", :width => "60px", :height => "60px"), vote_down_post_path(@post), :method => :post, :remote => true, :class => "vote_down") %>
	</div>

	<header>
	  <b>Title:</b>
	  <%= @post.title %>
	</header>

	<p>
	  <b>Content:</b>
		<div class="post_content">
	  <%= @post.content.html_safe %>
		</div>
	</p>

	<p>
	  <b>User:</b>
	  <%= @post.user_id %>
	</p>


	<%= link_to 'Edit', edit_post_path(@post) %>
	
	<h1>Listing tags</h1>

	<table>
	  <tr>
	    <th>Name</th>
	    <th></th>
	  </tr>

	<% @tags.each do |tag| %>
	  <tr>
	    <td><%= tag %></td>
	  </tr>
	<% end %>
	</table>

	<br />
</section>

<section id="comments">
	<!-- Comments -->
	<header>
	<h1>Listing comments</h1>
	</header>
	
	<div id="display_comments" data-displayed-comments=<%= @displayed_comments %>>
	
		<%= display_comments(@comments) %>
	</div>


	<br />

	<% if @remaining_comments != 0 %>
	<%= link_to "Voir plus de commentaires", show_more_comments_path(@post, :displayed_comments => @displayed_comments), :id => "show_more_comments_link", :method => :post, :remote => true %>
	<% end %>


	<!-- New comment -->



	<div id="wrap_form_new_comment">
	
		<%= render 'comments/form' %>

	</div>
</section>


