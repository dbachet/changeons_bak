$('form#new_reply').remove();

$('ul#hmenu').html("<%= escape_javascript(render :partial => 'layouts/menu_items') %>");

var last_reply = $('div.reply_for_<%= @comment.id %>:last');
if (last_reply[0]) {
	window.location = "#" + $('div.reply_for_<%= @comment.id %>:last').attr("id");
	
	last_reply.after("<%= escape_javascript(render :partial => 'comments/form_reply_comment') %>");
} else {
	window.location = "#" + $('div#comment_<%= @comment.id %>').attr("id");
	
	$('div#comment_<%= @comment.id %>').after("<%= escape_javascript(render :partial => 'comments/form_reply_comment') %>");
}


$('form#new_reply').hide();

$('form#new_reply').slideDown("slow");


$('form#new_reply[data-validate], form#new_comment[data-validate]').validate();