var comment_title = $('form#reply_new input#reply_title').val(),
	comment_content = $('form#reply_new textarea#reply_body').val(),
	comment_guest_email = $('form#reply_new input#reply_guest_email').val(),
	comment_guest_website = $('form#reply_new input#reply_guest_website').val(),
	last_reply = $('article.reply_for_<%= @root_comment.id %>:last');
	
	var commentFormWithGuestFields = $('form#comment_new.guest');
	
	if (commentFormWithGuestFields[0]){
		$('div#wrap_form_new_comment').html("<%= escape_javascript(render :partial => 'comments/form') %>");
	}

$('div.wrap_form_new_reply').html("");

var replyField = $('div.root_comment_area.<%= @root_comment.id %> div.wrap_form_new_reply'),
	replyFieldTop = replyField.position().top - $('nav#top_page').height() - 10;

$('html, body').animate({scrollTop: replyFieldTop + 'px'}, 800);

replyField.html("<%= escape_javascript(render :partial => 'comments/form_reply_comment_with_guest_fields') %>");

replyField.hide();

replyField.fadeIn("slow");


$('form#reply_new input#reply_title').val(comment_title);
$('form#reply_new textarea#reply_body').val(comment_content);
$('form#reply_new input#reply_guest_email').val(comment_guest_email);
$('form#reply_new input#reply_guest_website').val(comment_guest_website);

$('form#reply_new[data-validate], form#comment_new[data-validate]').validate();
