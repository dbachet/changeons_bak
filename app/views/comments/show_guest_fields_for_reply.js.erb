var comment_title = $('div.reply_fields input#comment_title').val(),
	comment_content = $('div.reply_fields textarea#comment_body').val(),
	comment_guest_email = $('div.reply_fields input#comment_guest_email').val(),
	comment_guest_website = $('div.reply_fields input#comment_guest_website').val();

$('div#reply_comment_<%= @comment.id %>').html("<%= escape_javascript(render :partial => 'comments/form_reply_comment_with_guest_fields') %>");



$('div.reply_fields input#comment_title').val(comment_title);
$('div.reply_fields textarea#comment_body').val(comment_content);
$('div.reply_fields input#comment_guest_email').val(comment_guest_email);
$('div.reply_fields input#comment_guest_website').val(comment_guest_website);

$('div.reply_fields form#new_comment[data-validate]').validate();