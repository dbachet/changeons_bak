

<% if @comment %>
	var recaptcha_err = "<%= @comment.errors[:base] %>";
	
	if (recaptcha_err.length > 0){
		Recaptcha.reload();
		// $('div#dynamic_recaptcha').replaceWith('<%= escape_javascript(recaptcha_tags(:display => {:theme => "blackglass"}, :ajax => true)) %>');
		$('div#dynamic_recaptcha').next('span').html(recaptcha_err);
	}
<% end %>

