
<%= form_for(@reply, :as => "reply", :url => create_reply_post_comment_path(@post, @root_comment, :anchor => "reply_comment_#{@root_comment.id}"), :html => {:method => :post}, :validate => (current_user ? true : false), :remote => true) do |f| %>
<h1>New reply</h1>

  
<% if @reply.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@reply.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @reply.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, 'data-comment-id' => @comment.id %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, :validate => true %>
  </div>
	<div class="new_reply_guest_fields">
	</div>
	<div class="actions">
	<% if current_user %>
		<%= f.submit %>
	<% else %>
		<div class="wrap_drop_write_reply_as">
		<%= render 'comments/drop_write_reply_as' %>
		</div>
	<% end %>
	</div>
<% end %>
