<h1>New reply</h1>


<%= form_for(@reply, :url => create_reply_post_comment_path(@post, @comment, :anchor => "reply_comment_#{@comment.id}"), :method => :post) do |f| %>
  <% if @reply.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@reply.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @reply.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
	<div class="new_reply_guest_fields">
	</div>
	<div class="actions">
	<% if current_user %>
		<%= f.submit %>
	<% else %>
		<div class="wrap_drop_write_reply_as">
		<%= render 'comments/drop_write_reply_as' %>
		</div>
	<% end %>
	</div>
<% end %>
