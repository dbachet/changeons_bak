	</header>
	<% @top_tips.each do |tip| %>
		<article>
			<div>
				<%= image_tag tip.picture.url(:thumb) %>
			</div>
			<div>
				<h2><%= truncate(tip.title, :length => 55, :separator => ' ') %></h2>
			</div>
		</article>
	<% end %>
</section>
<h1 class="red_section big">Les <span>QUESTIONS/RÉPONSES</span> de la catégorie <span>"<%= @category.name %>"</span></h1>
<section id="questions" >
