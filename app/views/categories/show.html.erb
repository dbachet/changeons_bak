<div id="page_info" data-action=""></div>
<h1 class="red_section big">Les <span>ARTICLES</span> de la catégorie <span>"<%= @category.name %>"</span></h1>
<section id="posts" data-displayed-posts=<%= @displayed_posts %>>
	<header>
		<h1>Derniers articles</h1>
	</header>
	<%= render "posts/posts" %>

	<% if @remaining_posts != 0 %>
		<%= link_to "Voir plus d'articles", show_more_posts_path(:displayed_posts => @displayed_posts), :id => "show_more_posts_link", :method => :post, :remote => true %>
	<% end %>

	<br />

	<% if can? :new, @post %><%= link_to 'New Post', new_post_path %><% end %>
</section>
<div style="display:inline-block; width:22em; vertical-align: top">
	<section id="posts_ranking">
		<header>
			<h1>Classement des meilleurs articles</h1>
		</header>
		<% @top_posts.each do |post| %>
			<article>
				<div>
					<%= image_tag post.picture.url(:thumb) %>
				</div>
				<div>
					<h2><%= truncate(post.title, :length => 55, :separator => ' ') %></h2>
				</div>
			</article>
		<% end %>
	</section>
	<section id="post_tag_tool">
		<header>
			<h1>Tags recensés dans les articles</h1>
		</header>
		<% @tags.each do |tag| %>
			<span style="font-size: <%= 8 + rand(20) %>px"><%= link_to tag, tag_show_posts_path(tag.cached_slug) %>
		<% end %>
	</section>
</div>
<h1 class="red_section big">Les <span>ASTUCES</span> de la catégorie <span>"<%= @category.name %>"</span></h1>
<section id="tips" >
	<header>
