<h1>Contact Us</h1> 
<%= form_for  @contact_form, :url => contact_us_send_email_path, :validate => true do |f| %> 
  <div class="field"> 
    <%= f.label :name %><br /> 
    <%= f.text_field :name, :validate => true %> 
  </div> 
  <div class="field"> 
    <%= f.label :email %><br /> 
    <%= f.text_field :email, :validate => true %> 
  </div> 
  <div class="field"> 
    <%= f.label :body %><br /> 
    <%= f.text_area :body, :validate => true %> 
  </div> 
  <div class="actions"> 
    <%= f.submit %> 
  </div> 
<% end %>