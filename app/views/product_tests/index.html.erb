<section id="product_tests" >
	<header>
		<h1>Derniers tests de produits</h1>
	</header>
	<%= render "product_tests/product_tests" %>



	<% if can? :new, @product_test %><%= link_to 'New product test', new_product_test_path %><% end %>
</section>

<h1>Listing product_tests</h1>

<table>
  <tr>
    <th>Brand</th>
    <th>Product model</th>
    <th>Product ref</th>
    <th>Description</th>
    <th>Opinion</th>
    <th>Advantages</th>
    <th>Drawbacks</th>
    <th>Recommended price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @product_tests.each do |product_test| %>
  <tr>
    <td><%= product_test.brand %></td>
    <td><%= product_test.product_model %></td>
    <td><%= product_test.product_ref %></td>
    <td><%= product_test.description %></td>
    <td><%= product_test.opinion %></td>
    <td><%= product_test.advantages %></td>
    <td><%= product_test.drawbacks %></td>
    <td><%= product_test.recommended_price %></td>
    <td><%= link_to 'Show', product_test %></td>
    <td><%= link_to 'Edit', edit_product_test_path(product_test) %></td>
    <td><%= link_to 'Destroy', product_test, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product test', new_product_test_path %>
