<h2>Sign up</h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true) do |f| %>

<%= f.error_notification %>

<div class="inputs">
<%= f.input :display_name %>
</div>

<div class="inputs">
<%= f.input :email %>
</div>

<div class="inputs">
<%= f.input :password %>	
</div>

<div class="inputs">
<%= f.input :password_confirmation %>
</div>

<div class="inputs">
<%= f.input :real_name %>
</div>

<div class="inputs">
<%= f.input :website %>
</div>

<div class="inputs">
<%= f.input :location %>
</div>

<div class="inputs">
<%= f.input :birthday %>
</div>

<div class="inputs">
<%= f.input :about_me, :as => :text %>
</div>

<div class="action">
<%= f.button :submit %>
</div>
<% end %>

<%= render :partial => "devise/shared/links" %>
