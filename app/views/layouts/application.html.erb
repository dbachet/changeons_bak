<!DOCTYPE html>
<html lang="fr">
<head>
  <title>Changeons</title>
  <%= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag 'fancybox/jquery.fancybox' %>

  <%= javascript_include_tag :defaults, 'fancybox/jquery.easing-1.3.pack', 'fancybox/jquery.fancybox.pack', 'fancybox/jquery.mousewheel-3.0.6.pack', 'rails.validations', :ckeditor, 'domtab.js', 'easypaginate' %>
  <%= csrf_meta_tag %>
	<!--[if gte IE 9]>
	  <style type="text/css">
	    .gradient {
	       filter: none;
	    }
	  </style>
	<![endif]-->
</head>
<body>

	<header>
		<nav id="top_page" class="gradient">
			<%= render 'layouts/menu_items' %>
		</nav>
	</header>
		<div id="notice_alert_fields">
			<%= render 'layouts/flash_messages' %>
		</div>
	<div id="main">
		<header id="top_banner">
			<%= image_tag('/images/test_image_top_banner.png', :height => "220px", :width => "802px") %>
			<div id="right_top_banner"></div>
			<div id="changeons"></div>
			<div id="eoliennes"></div>
			<div id="grass"></div>
		</header>
		<div id="yield">
		<%= yield %>
		</div>
		<div id="right_bar">
			<section id="newsletter_form">
				<header>
					<h1>NEWSLETTER</h1>
				</header>
				<%= simple_form_for(@newsletter_subscriber, :validate => true) do |f| %>
				  <%= f.error_notification %>

				  <div class="inputs">
				    <%= f.input :email, :validate => true, :input_html => { :size => 30 }, :label => false %>
				  </div>

				  <div class="actions">
				    <%= f.button :submit, "S'inscrire", :class => "awesome orange" %>
				  </div>
				<% end %>
			</section>
			<section id="sponsors">
				<header>
					<h1>SPONSORS</h1>
				</header>
				<div>
					<article class="sponsor">Sponsorisez ce site web
					</article>
					<article class="sponsor">Sponsorisez ce site web
					</article>
				</div>
			</section>
		</div>

	</div>
	<footer>
		<nav>
			<%= render 'layouts/footer_menu_items' %>
		</nav>
	</footer>
</body>
</html>
