<!DOCTYPE html>
<html lang="fr">
<head>
  <title>Changeons</title>
  <%= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag 'fancybox/jquery.fancybox' %>

  <%= javascript_include_tag :defaults, 'fancybox/jquery.easing-1.3.pack', 'fancybox/jquery.fancybox.pack', 'fancybox/jquery.mousewheel-3.0.6.pack', 'rails.validations', :ckeditor, 'domtab.js', 'easypaginate', 'jquery-ui-1.8.17.custom.min' %>
  <%= csrf_meta_tag %>
	<!--[if gte IE 9]>
	  <style type="text/css">
	    .gradient {
	       filter: none;
	    }
	  </style>
	<![endif]-->
</head>
<body>

	<header>
		<nav id="top_page" class="gradient">
			<%= render 'layouts/menu_items' %>
		</nav>
	</header>
		<div id="notice_alert_fields">
			<%= render 'layouts/flash_messages' %>
		</div>
	<div id="main">
		<header id="top_banner">
			
		</header>
		<div id="yield">
		<%= yield %>
		</div>
		<div id="right_bar">
			<section id="newsletter_form">
				<header>
					<h1 class="red_section"><span>La</span> NEWSLETTER</h1>
				</header>
				<%= simple_form_for(@newsletter_subscriber, :validate => true) do |f| %>
				  <%= f.error_notification %>

				  <div class="inputs">
				    <%= f.input :email, :validate => true, :input_html => { :size => 30 }, :label => false %>
				  </div>

				  <div class="actions">
				    <%= f.button :submit, "S'inscrire", :class => "awesome orange" %>
				  </div>
				<% end %>
			</section>
			<section id="sponsors">
				<header>
					<h1 class="red_section"><span>Les</span> SPONSORS</h1>
				</header>
				<div>
					<article class="sponsor">Sponsorisez ce site web
					</article>
					<article class="sponsor">Sponsorisez ce site web
					</article>
					<article class="sponsor">Sponsorisez ce site web
					</article>
					<article class="sponsor">Sponsorisez ce site web
					</article>
					<article class="sponsor">Sponsorisez ce site web
					</article>
					<article class="sponsor">Sponsorisez ce site web
					</article>
				</div>
			</section>
			<section id="best">
				<header>
					<h1 class="red_section"><span>Les</span> BEST <span>of</span> CHANGEONS</h1>
				</header>
				<header>
					<nav id="changeons">
						<div class="domtab">
							<ul class="domtabs">
								<li><a href="#best1">Les + lus</a></li>
								<li><a href="#best2">Les + vot√©s</a></li>
							</ul>
						</div>
					</nav>
				</header>
				<div class="domtab">
					<div>
					    <a name="best1" id="best1"></a>
						<% @best_items.each do |item| %>
							<article>
								<div>
									<%= image_tag item.picture.url(:thumb) %>
								</div>
								<div>
									<h2><%= truncate(item.title, :length => 55, :separator => ' ') %></h2>
								</div>
							</article>
						<% end %>
					</div>
				</div>
				<div class="domtab">
					<div>
					    <a name="best2" id="best2"></a>
					    <% @best_items2.each do |item| %>
							<article>
								<div>
									<%= image_tag item.picture.url(:thumb) %>
								</div>
								<div>
									<h2><%= truncate(item.title, :length => 55, :separator => ' ') %></h2>
								</div>
							</article>
						<% end %>
					</div>
				</div>
			</section>
		</div>

	</div>
	<footer>
		<nav>
			<%= render 'layouts/footer_menu_items' %>
		</nav>
	</footer>
</body>
</html>
