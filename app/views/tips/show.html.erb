<div id="show_left">
	<article id="tip" class="show">
		<header>
			<div class="left">
				<div class="etiquette">Astuce</div>
				<div class="date">
					<span class="day"><%= @tip.created_at.strftime("%d") %></span>
					<span class="month"><%= getMonthFromNumber(@tip.created_at.strftime("%m")) %></span>
					</br>
					<span class="year"><%= @tip.created_at.strftime("%Y") %></span>
				</div>
			</div>
			<div class="right" <%= ("style='width:30em'" if !@tip.has_big_picture) %>>
				<h1><%= @tip.title %></h1>
				<div class="written_by"><span>écrit par</span> <%= @tip.user.email %></div>
				<div class="categories">Catégories:
					<span><%= @categories.map{|c| c.name}.join(', ') %></span>
				</div>
			</div>
			<% if !@tip.has_big_picture %>
				<div id="small_picture">
					<%= image_tag @tip.picture.url(:thumb) %>
				</div>
			<% end %>
		</header>
		<div id="left_bar">
			<div id="share">
				<div id="vote">
					<div id="vote_up">
						<%= link_to(image_tag("thumb_up.png", :width => "29px", :height => "30px"), vote_up_tip_path(@tip), :method => :post, :remote => true) %>
					</div>

					<div id="votes_result">
						<%= render "layouts/votes_result" %>
					</div>
				</div>
			</div>
		</div>
	
		<div id="content_wrap">
			<% if @tip.has_big_picture %>
				<div id="big_picture">
					<%= image_tag @tip.picture.url(:medium),  :style => ("margin: 0 9em" if !@tip.picture_orientation_horizontal) %>
				</div>
			<% end %>
		  <%= simple_format(h @tip.description) %>
	

		<%= link_to 'Edit', edit_tip_path(@tip) %>

		<br />
	
		</div>
		<% if @tip.source %>
		Sources:
		<ul>		
			<%= @tip.sources.html_safe %>
		</ul>
		<% end %>
	</article>

	<section id="comments">
		<!-- Comments -->
		<header>
		<h1>Commentaires</h1>
		</header>
	
		<div id="display_comments" data-displayed-comments=<%= @displayed_comments %>>
	
			<%= display_comments(@comments) %>
		</div>


		<br />




		<!-- New comment -->



		<div id="wrap_form_new_comment">
	
			<%= render 'comments/form' %>

		</div>
	</section>
</div>

<div id="show_right">
	<section id="also_to_read">
		<header>
			<h1 class="red_section">À LIRE AUSSI</h1>
		</header>
		<div class="articles">
			<h1>Articles</h1>
			<% @also_to_read_posts.each do |post| %>
				<article>
					<div><%= image_tag post.picture.url(:thumb) %></div>
					<div>
						<h2><%= truncate(post.title, :length => 55, :separator => ' ') %></h2>
					</div>
				</article>
			<% end %>
		</div>
		<div class="tips">
			<h1>Astuces</h1>
			<% @also_to_read_tips.each do |tip| %>
				<article>
					<div>
						<%= image_tag tip.picture.url(:thumb) %>
					</div>
					<div>
						<h2><%= truncate(tip.title, :length => 55, :separator => ' ') %></h2>
					</div>
				</article>
			<% end %>
		</div>
		<div class="events">
			<h1>Évènements</h1>
			<% @also_to_read_events.each do |event| %>
				<article>
					<div>
						<%= image_tag event.picture.url(:thumb) %>
					</div>
					<div>
						<h2><%= truncate(event.title, :length => 55, :separator => ' ') %></h2>
					</div>
				</article>
			<% end %>
		</div>
		<div class="product_tests">
			<h1>Avis/Tests</h1>
			<% @also_to_read_product_tests.each do |product_test| %>
				<article>
					<div>
						<%= image_tag product_test.picture.url(:thumb) %>
					</div>
					<div>
						<h2><%= truncate("#{product_test.brand} #{product_test.product_model}", :length => 55, :separator => ' ') %></h2>
					</div>
				</article>
			<% end %>
		</div>
	</section>
</div>