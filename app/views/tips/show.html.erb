<article id="tip">
	<header>
		<div class="left">
			<div class="etiquette_tip">Astuce</div>
			<div class="tip_date">
				<span class="day"><%= @tip.created_at.strftime("%d") %></span>
				<span class="month"><%= getMonthFromNumber(@tip.created_at.strftime("%m")) %></span>
				</br>
				<span class="year"><%= @tip.created_at.strftime("%Y") %></span>
			</div>
		</div>
		<div class="right">
			<h1><%= @tip.title %></h1>
			<div class="written_by"><span>écrit par</span> <%= @tip.user.email %></div>
			<div class="tip_categories">Catégories: 
				<% @categories.each do |category| %>
					<%= category.name %> 
				<% end %>
			</div>
		</div>
	</header>
	<div id="tip_share">
		<div id="tip_vote">
			<div id="vote_up">
				
			</div>

			<div id="votes_result">
				
			</div>
		</div>
	</div>
	
	<div id="tip_content_wrap">
	<p>
		<div class="tip_content">
	  <%= @tip.description.html_safe %>
		</div>
	</p>

	<%= link_to 'Edit', edit_tip_path(@tip) %>

	<br />
	</div>
</article>

<section id="comments">
	<!-- Comments -->
	<header>
	<h1>Commentaires</h1>
	</header>
	
	<div id="display_comments" data-displayed-comments=<%= @displayed_comments %>>
	
		<%= display_comments(@comments) %>
	</div>


	<br />




	<!-- New comment -->



	<div id="wrap_form_new_comment">
	
		<%= render 'comments/form' %>

	</div>
</section>