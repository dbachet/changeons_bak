
<% @tips.each do |tip| %>
<article id="tip_<%= tip.id %>">
	<div class="left">
		<div class="image"><%= image_tag tip.picture.url(:thumb) if !tip.presentation_picture.blank? %></div>
		<div class="date"><span class="day"><%= tip.created_at.strftime("%d") %></span><span class="month"><%= getMonthFromNumber(tip.created_at.strftime("%m")) %></span></br><span class="year"><%= tip.created_at.strftime("%Y") %></span></div>
	</div>
	<div class="content">
		<header>
			
	    	<h1><%= tip.title %></h1>
			<span>Ã©crit par</span> <%= tip.user.email %>
		</header>
	    <div class="description"><%= raw(tip.description) %></div>
	    <%= link_to 'Voir', tip, :class => "link_to_entry" %>
	</div>
</article>
<div class="horizontal_rule"></div>
<% end %>