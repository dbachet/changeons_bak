<%= simple_form_for(@tip, :validate => true, :html => { :multipart => true }) do |f| %>
<header>
	<div class="left">
		<div class="etiquette">Astuce</div>
		<div class="date">
			<span class="day"><%= Time.now.strftime("%d") %></span>
			<span class="month"><%= getMonthFromNumber(Time.now.strftime("%m")) %></span>
			</br>
			<span class="year"><%= Time.now.strftime("%Y") %></span>
		</div>
	</div>
	<div class="right">
		<div class="written_by"><span>écrit par</span> <%= (@tip.user.email if @tip.user) || current_user.email %></div>
		<h1>1. Titre*</h1>
		<%= f.input :title, :label => false, :as => :text, :input_html => {:class => "new_form_input"} %>
		<div class="group_items">
			<div class="description">
				<h1>2. Description*</h1>
				<%= f.input :description, :label => false, :input_html => {:class => "new_form_input"} %>
			</div>
			<div id="image">
				<h1>3. Image de l'astuce</h1>
				<div class="new_form_input">
				<%= image_tag @tip.picture.url(:thumb) %></br>
				<%= f.input :picture, :as => :file, :label => false %>
				</div>

			</div>
		</div>
	</div>
	
</header>
<div id="sources">
	<h1>4. Sources / liens utilisés pour la rédaction de cette astuce</h1>
	
	<div id="source_inputs">
		Description de la source - non obligatoire
		<%= f.input :source_description, :label => false, :wrapper_html => {:id => "source_description"}, :input_html => {:class => "new_form_input", :value => ''}, :validate => false %>
		Lien hypertexte (URL) - non obligatoire
		<%= f.input :source, :label => false, :wrapper_html => {:id => "html_link"}, :input_html => {:class => "new_form_input", :value => 'http://'}, :validate => false %>
		<%= f.input :sources, :label => false, :input_html => {:class => "new_form_input"}, :validate => false %>
		<%= link_to "+ Ajouter la source", add_source_tip_path(@tip), :remote => true, :class => "awesome" %>
	</div>
	<div id="source_list">
		Prévisualisation des sources
		<ul id="sources_display">
			<% if !@tip.sources.blank? %>
				<%= @tip.sources.html_safe %>
			<% end %>
		</ul>
	</div>
<div id="categories">
	<h1>4. Catégories*</h1>
	<%= link_to "Créer une nouvelle catégorie", new_category_path, :class => "new_category_link fancybox.ajax awesome" %><%= link_to "Afficher toutes les catégories", categories_path, :class => "index_categories_link fancybox.ajax awesome" %>
</div>
	<%= f.association :categories, :label => false, :as => :check_boxes, :wrapper_html => {:id => "category_list", :class => "new_form_input"} %>
</div>
	
    <%= f.button :submit %>
<% end %>

<script type="text/javascript">
	$(document).ready(function() {
		$(function(){
			add_source_links();
		});
	});
	
	function add_source_links(){
		var li_classes = $('ul#sources_display li');
		if (li_classes.length) {
			link_to_remove_source = "<%= remove_source_tip_path(@tip) %>";
			li_classes.each(function(index) {
			    $(this).append('<a href="' + link_to_remove_source + '?source=' + $(this).attr('class') + '" data-remote="true" class="remove_source"' + '>Supprimer</a>');
			});
		}
	}
</script>
