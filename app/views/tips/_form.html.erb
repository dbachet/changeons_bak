<% javascript 'tips/form.js' %>
<%= simple_form_for(@tip.presentation_picture,:url => create_presentation_picture_path, :html => { :multipart => true }, :remote => true) do |pic| %>

  <div class="inputs">
	<%= pic.file_field :picture %>
  </div>


<progress id="progressBar" value="0" max="100" style="display:none"></progress><span id="percent" style="display:none">0%</span>
</br><span id="picture_upload_status"></span>
<% end %>


<div id="delete_presentation_picture_link" <%= "style=display:none" if @tip.presentation_picture.blank? %>><%= link_to "Supprimer l'image", delete_presentation_picture_path, :remote => true, :method => :delete, :confirm => 'Are you sure?' %></div>

<div id="presentation_picture_preview"><%= @tip.presentation_picture.blank? ? "" : image_tag(@tip.picture.url(:medium)) %></div>


<%= simple_form_for(@tip, :validate => true, :html => { :multipart => true }) do |f| %>
<%= f.input :presentation_picture_id, :label => true, :input_html => {:id => "presentation_picture_id", :value => (@tip.presentation_picture.id if !@tip.presentation_picture.blank?) } %>

<header>
	<div class="left">
		<div class="etiquette">Astuce</div>
		<div class="date">
			<span class="day"><%= Time.now.strftime("%d") %></span>
			<span class="month"><%= getMonthFromNumber(Time.now.strftime("%m")) %></span>
			</br>
			<span class="year"><%= Time.now.strftime("%Y") %></span>
		</div>
	</div>
	<div class="right">
		<div class="written_by"><span>écrit par</span> <%= (@tip.user.email if @tip.user) || current_user.email %></div>
		<h1>1. Titre*</h1>
		<div>
			<%= f.input :title, :label => false, :as => :text, :wrapper => false, :input_html => {:class => "new_form_input char_count"} %>
			<span class="counter"></span>
		</div>
		<div class="group_items">
			<div class="description">
				<h1>2. Description*</h1>
				<%= f.input :description, :label => false, :input_html => {:class => "new_form_input"} %>
			</div>
			<div id="image">
				
				
			</div>
			
		</div>
	</div>
	
</header>
<div id="sources">
	<h1>4. Sources / liens utilisés pour la rédaction de cette astuce</h1>
	
	<div id="source_inputs">
		Description de la source - non obligatoire
		<%= f.input :source_description, :label => false, :wrapper_html => {:id => "source_description"}, :input_html => {:class => "new_form_input", :value => '', :id => "source_description_input"}, :validate => false %>
		Lien hypertexte (URL) - non obligatoire
		<%= f.input :source, :label => false, :wrapper_html => {:id => "html_link"}, :input_html => {:class => "new_form_input", :value => 'http://', :id => "html_link_input"}, :validate => true %>
		<%= f.input :sources, :label => false, :input_html => {:id => "sources_input"}, :validate => false %>
		<%= link_to "+ Ajouter la source", tips_add_source_path, :remote => true, :class => "awesome" %>
	</div>
	<div id="source_list">
		Prévisualisation des sources
		<ul id="sources_display">
			<% if !@tip.sources.blank? %>
				<%= @tip.sources.html_safe %>
			<% end %>
		</ul>
	</div>
</div>
<div id="categories">
	<h1>5. Catégories*</h1>
	<%= link_to "Créer une nouvelle catégorie", new_category_path, :class => "new_category_link fancybox.ajax awesome" %><%= link_to "Afficher toutes les catégories", categories_path, :class => "index_categories_link fancybox.ajax awesome" %>
</div>
	<%= f.association :categories, :label => false, :as => :check_boxes, :wrapper_html => {:id => "category_list", :class => "new_form_input"} %>
	
    <%= f.button :submit %>
<% end %>
