<section id="tips" >
	<header>
		<h1>Dernières astuces ajoutées</h1>
	</header>
	<%= render "tips/tips" %>



	<% if can? :new, @tip %><%= link_to 'New Post', new_tip_path %><% end %>
</section>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tips.each do |tip| %>
  <tr>
    <td><%= tip.title %></td>
    <td><%= tip.description %></td>
    <td><%= tip.user_id %></td>
    <td><%= link_to 'Show', tip %></td>
    <td><%= link_to 'Edit', edit_tip_path(tip) %></td>
    <td><%= link_to 'Destroy', tip, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Tip', new_tip_path %>
