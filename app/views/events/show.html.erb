<article id="event">
	<header>
		<div class="left">
			<div class="etiquette_event">Évènement</div>
			<div class="event_date">
				<span class="day"><%= @event.created_at.strftime("%d") %></span>
				<span class="month"><%= getMonthFromNumber(@event.created_at.strftime("%m")) %></span>
				</br>
				<span class="year"><%= @event.created_at.strftime("%Y") %></span>
			</div>
		</div>
		<div class="right">
			<h1><%= @event.title %></h1>
			<div class="written_by"><span>écrit par</span> <%= @event.user.email %></div>
			<div class="tip_categories">Catégories: 
				<% @categories.each do |category| %>
					<%= category.name %> 
				<% end %>
			</div>
		</div>
	</header>
	<div id="event_share">
		<div id="event_vote">
			<div id="vote_up">
				
			</div>

			<div id="votes_result">
				
			</div>
		</div>
	</div>
	
	<div id="event_content_wrap">
	<p>
		<div class="event_content">
	  <%= @event.description.html_safe %>
		</div>
	</p>

	<%= link_to 'Edit', edit_event_path(@event) %>

	<br />
	</div>
</article>

