<article id="event">
	<header>
		<div class="left">
			<div class="etiquette_event">Évènement</div>
			<div class="event_date">
				<span class="day"><%= @event.created_at.strftime("%d") %></span>
				<span class="month"><%= getMonthFromNumber(@event.created_at.strftime("%m")) %></span>
				</br>
				<span class="year"><%= @event.created_at.strftime("%Y") %></span>
			</div>
		</div>
		<div class="right">
			<h1><%= @event.title %></h1>
			<div class="written_by"><span>écrit par</span> <%= @event.user.email %></div>
			<div class="tip_categories">Catégories: 
				<% @categories.each do |category| %>
					<%= category.name %> 
				<% end %>
			</div>
		</div>
	</header>
	<div id="event_share">
		<div id="event_vote">
			<div id="vote_up">
				<%= link_to(image_tag("thumb_up.png", :width => "29px", :height => "30px"), vote_up_event_path(@event), :method => :post, :remote => true) %>
			</div>

			<div id="votes_result">
				<%= render "layouts/votes_result" %>
			</div>
		</div>
	</div>
	
	<div id="event_content_wrap">
	<p>
		<div class="event_content">
	  <%= @event.description.html_safe %>
		</div>
	</p>

	<%= link_to 'Edit', edit_event_path(@event) %>

	<br />
	</div>
</article>

<section id="comments">
	<!-- Comments -->
	<header>
	<h1>Commentaires</h1>
	</header>
	
	<div id="display_comments" data-displayed-comments=<%= @displayed_comments %>>
	
		<%= display_comments(@comments) %>
	</div>


	<br />




	<!-- New comment -->



	<div id="wrap_form_new_comment">
	
		<%= render 'comments/form' %>

	</div>
</section>