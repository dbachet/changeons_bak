<%= simple_form_for(@event, :validate => true, :html => { :multipart => true }) do |f| %>
<header>
	<div class="left">
		<div class="etiquette">Évènement</div>
		<div class="date">
			<span class="day"><%= Time.now.strftime("%d") %></span>
			<span class="month"><%= getMonthFromNumber(Time.now.strftime("%m")) %></span>
			</br>
			<span class="year"><%= Time.now.strftime("%Y") %></span>
		</div>
	</div>
	<div class="right">
		<div class="written_by"><span>écrit par</span> <%= (@event.user.email if @event.user) || current_user.email %></div>
		<h1>1. Titre*</h1>
		<%= f.input :title, :label => false, :as => :text, :input_html => {:class => "new_form_input"} %>
		<div class="group_items">
			<div class="description">
				<h1>2. Description*</h1>
				<%= f.input :description, :label => false, :input_html => {:class => "new_form_input"} %>
			</div>
			<div id="image">
				<h1>3. Image de l'évènement</h1>
				<div class="new_form_input">
				<%= image_tag @event.picture.url(:thumb) %></br>
				<%= f.input :picture, :as => :file, :label => false %>
				</div>
				<h1>4. Date de début*</h1>
				<%= f.input :event_start_date, :label => false, :as => :string, :input_html => {:class => "datepicker new_form_input", :value => "jj/mm/aaaa", :maxlength => 8} %>
				<h1>5. Date de fin</h1>
				<%= f.input :event_end_date, :label => false, :as => :string, :input_html => {:class => "datepicker new_form_input", :value => "jj/mm/aaaa"} %>
			</div>
		</div>
	</div>
	
</header>

<h1>6. Adresse</h1>
<h2>Rue</h2><%= f.input :addr_street, :label => false, :input_html => {:class => "new_form_input"} %>
<h2>Code postal</h2><%= f.input :addr_postcode, :label => false, :input_html => {:class => "new_form_input"} %>
<h2>Ville</h2><%= f.input :addr_city, :label => false, :input_html => {:class => "new_form_input"} %>

<div id="categories">
	<h1>4. Catégories*</h1>
	<%= link_to "Créer une nouvelle catégorie", new_category_path, :class => "new_category_link fancybox.ajax awesome" %><%= link_to "Afficher toutes les catégories", categories_path, :class => "index_categories_link fancybox.ajax awesome" %>
	
	<%= f.association :categories, :label => false, :as => :check_boxes, :wrapper_html => {:id => "category_list", :class => "new_form_input"} %>
</div>
	
    <%= f.button :submit %>
<% end %>
