<% @questions.each do |question| %>
<article id="question_<%= question.id %>">
	<div class="left">
		<div class="image"><%= image_tag question.picture.url(:thumb) if !question.presentation_picture.blank? %></div>
		<div class="date"><span class="day"><%= question.created_at.strftime("%d") %></span><span class="month"><%= getMonthFromNumber(question.created_at.strftime("%m")) %></span></br><span class="year"><%= question.created_at.strftime("%Y") %></span></div>
	</div>
	<div class="content">
		<header>
	    	<h1><%= question.title %></h1>
			<span>Ã©crit par</span> <%= question.user.email %>
		</header>
	    <div class="description"><%= raw(question.content) %></div>
	    <%= link_to 'Voir', question, :class => "link_to_entry" %>
	</div>
</article>
<div class="horizontal_rule"></div>
<% end %>