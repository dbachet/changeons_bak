<div id="show_left">
	<article id="question" class="show">
		<header>
			<div class="left">
				<div class="etiquette">Astuce</div>
				<div class="date">
					<span class="day"><%= @question.created_at.strftime("%d") %></span>
					<span class="month"><%= getMonthFromNumber(@question.created_at.strftime("%m")) %></span>
					</br>
					<span class="year"><%= @question.created_at.strftime("%Y") %></span>
				</div>
			</div>
			<div class="right" style='width:30em'>
				<h1><%= @question.title %></h1>
				<div class="written_by"><span>écrit par</span> <%= @question.user.email %></div>
				<div class="categories">Catégories:
					<span><%= @categories.map{|c| c.name}.join(', ') %></span>
				</div>
			</div>
			<div id="small_picture">
				<%= image_tag "/images/post_picture_missing.png" %>
			</div>
			
		</header>
		<div id="left_bar">
			<div id="share">
				<div id="vote">
					<div id="vote_up">
						<%= link_to(image_tag("thumb_up.png", :width => "29px", :height => "30px"), vote_up_question_path(@question), :method => :post, :remote => true) %>
					</div>

					<div id="votes_result">
						<%= render "layouts/votes_result" %>
					</div>
				</div>
			</div>
		</div>
	
		<div id="content_wrap">
			
		  <%= simple_format(h @question.content) %>
	

		<%= link_to 'Edit', edit_question_path(@question) %>

		<br />
	
		</div>
		<% if @question.source %>
		Sources:
		<ul>		
			<%= @question.sources.html_safe %>
		</ul>
		<% end %>
	</article>
	<h1 class="red_section big"><span>Les</span> RÉPONSES</h1>
	<section id="answers">

	<% @answers.each do |answer| %>
		<article class="answer">
			<div class="answer_content">
				<header>
				</header>
				<%= content_tag(:div, simple_format(h answer.content), :class => "answer_body") %>
			</div>
			<div class="arrow_answer"></div>
			<div class="author_answer_name"><%= "#{answer.user.email}, le #{answer.created_at.strftime("%e")} #{getMonthFromNumber(answer.created_at.strftime("%m"))} #{answer.created_at.strftime("%Y")}" %></div>
			<%= content_tag(:div, content_tag(:img, "", :src => "/images/default_user_image.jpg", :class => "avatar"), :class => "author_answer_image") %>
		</article>
	<% end %>
	</section>
	
	<%= simple_form_for([@question, @answer]) do |f| %>
	  <%= f.error_notification %>

	  <div class="inputs">
	    <%= f.input :content %>
	  </div>

	  <div class="actions">
	    <%= f.button :submit %>
	  </div>
	<% end %>
	
</div>

<%= render :partial => "layouts/also_to_read" %>